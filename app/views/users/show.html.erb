<div class="main usershow-main">
    <div class="user-profile">
        <h2><%= @user.name %></h2>
        <p><%= @user.email %></p>
        <% if @current_user %>
            <% if @current_user.id == params[:id].to_i %>
                <%= link_to("Edit", "/users/#{@user.id}/edit") %>
            <% end %>
        <% end %>
    </div>
</div>