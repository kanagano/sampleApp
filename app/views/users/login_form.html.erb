<div class="container mb-5">
    <% if @error_message %>
        <div class="alert alert-danger mx-auto w-50 text-center">
            <%= @error_message %>
        </div>
    <% end %>
    <div class="row justify-content-center">
        <div class="col-4 text-center">
            <h2 class="mb-5">ログイン</h2>
            <%= form_tag("/login") do %>
                <p>メールアドレス</p>
                <p><input class="form-control" id="Email" name="email" value="<%= @email %>"></p>
                <p>パスワード</p>
                <p><input class="form-control" id="Password" type="password" name="password" value="<%= @password %>"></p>
                <p><input class="btn btn-primary mb-5" id="Logs In" type="submit" value="ログイン"></p>
            <% end %>
        </div>
    </div>
</div>