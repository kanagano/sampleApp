<!DOCTYPE html>
<html>
  <head>
    <title>AppName</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="header-logo">
          <%= link_to("信州美博Web", "/", {class: "navbar-brand"}) %>
        </div>
        <ul class="header-menus">
          <li><%= link_to("施設を探す", "/museums") %></li>
          <% if @current_user %>
            <li><%= link_to(@current_user.name, "/users/#{@current_user.id}") %></li>
            <li><%= link_to("ログアウト", "/logout", {method: :post}) %></li>
          <% else %>
            <li><%= link_to("About", "/about") %></li>
            <li><%= link_to("ログイン", "/login") %></li>
            <li class="btn btn-outline-primary"><%= link_to("ユーザー登録", "/signup") %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
