<% if Like.find_by(user_id: @current_user.id, post_id: post.id) %>
    <%= link_to("/likes/#{post.id}/destroy", {method: :post, id: "Unlike #{post.id}"}) do  %>
        <span class="fa fa-heart text-danger"></span>
    <% end %>
<% else %>
    <%= link_to("/likes/#{post.id}/create", {method: :post, id: "Like #{post.id}"}) do %>
        <span class="fa fa-heart text-secondary"></span>
    <% end %>
<% end %>
<%= Like.where(post_id: post.id).count %>